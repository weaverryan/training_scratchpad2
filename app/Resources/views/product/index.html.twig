{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>${{ product.price|number_format(2) }}</td>
                    <td>
                        <a href="{{ path('product_show', {id: product.id}) }}">
                            [show]
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}